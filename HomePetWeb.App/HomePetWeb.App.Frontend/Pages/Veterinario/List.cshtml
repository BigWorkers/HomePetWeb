@page
@model HomePetWeb.App.Frontend.Pages.ListModel
@{
}
<h1>Veterinario en Casa</h1>
<form method="get">
    <div class="form-group">
        <p>
            InfoVeterinario: <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda"/>
            <input type="submit" value="Filtar" />
        </p>
</form>
<table class="table">
    @foreach (var InfoVeterinario in Model.Veterinarios)
    {
        <tr>
            <td>@InfoVeterinario.Nombre</td>
            <td>@InfoVeterinario.Apellido</td>
            <td>@InfoVeterinario.Telefono</td>
            <td>@InfoVeterinario.TarjetaProfesional</td>
                 <td>
                    <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-veterinarioId="@InfoVeterinario.Id">
                        <i class="fas fa-info-circle fa-lg"></i>
                        InfoVet
                        </a>
                 </td>     
                 <td> 
                 <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-veterinarioId="@InfoVeterinario.Id">
                 <i class="fas fa-address-book fa-lg" aria-hidden="true"> </i>
                        Editar Info
                 </a>
                 <td> 
                 <a class="btn btn-primary table-btn" asp-page="./Delete" asp-route-veterinarioId="@InfoVeterinario.Id">
                 <i class="fas fa-address-book fa-lg" aria-hidden="true"> </i>
                        Borrar
                 </a>

            </td>  
        </tr>   
    }

    </table>
    <a asp-page=".\Edit" class="btn btn-primary">Adicionar Veterinario</a>
